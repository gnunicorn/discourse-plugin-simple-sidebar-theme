<div class='container'>
  {{custom-html "top"}}
  {{global-notice}}
  {{discourse-banner user=currentUser banner=site.banner}}
</div>

<div {{bind-attr class=":global-side-bar :side-bar-wrap hideSidebar:no-side-bar"}}>

  <div class="side-bar">{{view Discourse.SidebarView}}</div>

  <div class='list-controls'>
    <div class="container">
      {{outlet "navigation-bar"}}
    </div>
  </div>

  {{loading-spinner condition=loading}}

  <div {{bind-attr class=":container :list-container loading:hidden"}}>
    <div class="row">
      <div class="full-width">
        <div id='header-list-area'>
          {{outlet "header-list-container"}}
        </div>
      </div>
    </div>
    <div class="row">
      <div class="full-width">
        <div id='list-area'>
          {{outlet "list-container"}}
        </div>
      </div>
    </div>
  </div>

</div>
